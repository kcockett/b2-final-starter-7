<%= render partial: "shared/nav" %>

<div class="row">
  <div class="col-sm-6 column-header">
    <p class='mr-auto'>Bulk Discounts</p>
  </div>
  <div class="col-sm-6 column-header">
    <p class='ml-auto'>Upcoming Holidays</p>
  </div>
</div>

<div class="mr-auto col-sm-6">
  <table class="table">
    <tr>
      <td>ID</td>
      <td>Discount %</td>
      <td>Qty required</td>
    </tr>
    <% @merchant.discounts.each do |discount| %>
      <tr id="discount_<%= discount.id %>">
        <td><%= link_to "#{discount.id}", merchant_discount_path(@merchant.id, discount.id) %></td>
        <td><%= discount.percentage %></td>
        <td><%= discount.threshold %></td>
        <td><%= link_to "Delete Discount", merchant_discount_path(@merchant, discount), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <p>
    <%= link_to "Create new bulk discount", new_merchant_discount_path(@merchant.id) %>
  </p>
</div>

<div class="ml-auto col-sm-6">
  <ul>
    <section id = "upcoming_holidays">
      <% @holidays.each do |holiday| %>
        <li><%= holiday[:name] %> - <%= holiday[:date] %></li>
      <% end %>
    </section>
  </ul>
</div>